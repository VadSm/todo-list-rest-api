# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /all                        controllers.TasksController.all
POST    /create                     controllers.TasksController.createTask
DELETE  /delete/:id                 controllers.TasksController.deleteTask(id: Long)
PUT     /updateTitle/:id/:newTitle       controllers.TasksController.updateTaskTitle(id: Long, newTitle: String)
PUT     /updateStatus/:id/:newCompletedStatus       controllers.TasksController.updateCompletedStatus(id: Long, newCompletedStatus: Boolean)
PUT     /updateAllStatus/:newCompletedStatus       controllers.TasksController.updateAllTasksCompletedStatus(newCompletedStatus: Boolean)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
